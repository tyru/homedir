#!/usr/bin/env perl
use strict;
use warnings;
use utf8;

use Getopt::Long;
use Pod::Usage;
use URI::Escape qw(uri_escape uri_unescape);


### sub ###
sub usage () {
    pod2usage(-verbose => 2);
}


### main ###
my $needhelp;
my $uneacape;
GetOptions(
    'h|help' => \$needhelp,
    'u|uneacape' => \$uneacape,
) or usage;
usage if $needhelp;
usage unless @ARGV;
my $str = shift;


if ($uneacape) {
    print uri_unescape $str;
}
else {
    print uri_escape $str;
}



__END__

